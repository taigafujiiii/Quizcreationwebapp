generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum AuthTokenType {
  VERIFY_EMAIL
  RESET_PASSWORD
}

enum QuizMode {
  A
  B
  C
}

enum AttemptStatus {
  IN_PROGRESS
  COMPLETED
  EXPIRED
}

enum ChoiceLabel {
  A
  B
  C
  D
}

enum AnswerLabel {
  A
  B
  C
  D
  UNKNOWN
}

model User {
  id              String   @id @default(uuid()) @db.Uuid
  email           String   @unique @db.Citext
  passwordHash    String   @map("password_hash")
  role            Role
  emailVerifiedAt DateTime? @map("email_verified_at")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  authTokens  AuthToken[]
  invites     AdminInvite[] @relation("InvitedBy")
  questions   Question[]
  attempts    QuizAttempt[]

  @@map("users")
}

model AuthToken {
  id        String        @id @default(uuid()) @db.Uuid
  userId    String        @map("user_id") @db.Uuid
  type      AuthTokenType
  tokenHash String        @map("token_hash")
  expiresAt DateTime      @map("expires_at")
  usedAt    DateTime?     @map("used_at")
  createdAt DateTime      @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@index([userId, type])
  @@map("auth_tokens")
}

model AdminInvite {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @db.Citext
  tokenHash String   @map("token_hash")
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")
  invitedBy String   @map("invited_by") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  inviter User @relation("InvitedBy", fields: [invitedBy], references: [id])

  @@index([email])
  @@map("admin_invites")
}

model Unit {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  sortOrder Int       @map("sort_order")

  categories Category[]
  attempts   QuizAttempt[]

  @@map("units")
}

model Category {
  id        Int      @id @default(autoincrement())
  unitId    Int      @map("unit_id")
  name      String
  sortOrder Int      @map("sort_order")

  unit      Unit      @relation(fields: [unitId], references: [id])
  questions Question[]

  @@unique([unitId, name])
  @@map("categories")
}

model Question {
  id         Int      @id @default(autoincrement())
  categoryId Int      @map("category_id")
  body       String
  explanation String
  isActive   Boolean  @default(true) @map("is_active")
  createdBy  String   @map("created_by") @db.Uuid

  category Category @relation(fields: [categoryId], references: [id])
  creator  User     @relation(fields: [createdBy], references: [id])
  choices  Choice[]
  attemptQuestions QuizAttemptQuestion[]
  answers  QuizAttemptAnswer[]

  @@map("questions")
}

model Choice {
  id         Int         @id @default(autoincrement())
  questionId Int         @map("question_id")
  label      ChoiceLabel
  body       String
  isCorrect  Boolean     @default(false) @map("is_correct")

  question Question @relation(fields: [questionId], references: [id])

  @@unique([questionId, label])
  @@map("choices")
}

model QuizAttempt {
  id             String        @id @default(uuid()) @db.Uuid
  userId         String        @map("user_id") @db.Uuid
  mode           QuizMode
  unitId         Int?          @map("unit_id")
  requestedCount Int           @map("requested_count")
  actualCount    Int           @map("actual_count")
  currentSeq     Int           @map("current_seq")
  status         AttemptStatus
  selectionJson  Json          @map("selection_json")
  createdAt      DateTime      @default(now()) @map("created_at")
  expiresAt      DateTime      @map("expires_at")

  user      User       @relation(fields: [userId], references: [id])
  unit      Unit?      @relation(fields: [unitId], references: [id])
  questions QuizAttemptQuestion[]
  answers   QuizAttemptAnswer[]

  @@map("quiz_attempts")
}

model QuizAttemptQuestion {
  attemptId  String @map("attempt_id") @db.Uuid
  seq        Int
  questionId Int @map("question_id")

  attempt  QuizAttempt @relation(fields: [attemptId], references: [id])
  question Question    @relation(fields: [questionId], references: [id])

  @@id([attemptId, seq])
  @@unique([attemptId, questionId])
  @@map("quiz_attempt_questions")
}

model QuizAttemptAnswer {
  attemptId  String      @map("attempt_id") @db.Uuid
  questionId Int         @map("question_id")
  answer     AnswerLabel
  answeredAt DateTime    @map("answered_at")

  attempt  QuizAttempt @relation(fields: [attemptId], references: [id])
  question Question    @relation(fields: [questionId], references: [id])

  @@id([attemptId, questionId])
  @@map("quiz_attempt_answers")
}
